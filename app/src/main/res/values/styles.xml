<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Bottom Sheet-->
    <style name="BottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_rounded_sheet_background</item>
    </style>

    <style name="BaseBottomSheetStyle" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetThemeTheme" parent="BaseBottomSheetStyle">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="TextInputLayout.Login.Form.Outlined.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/mercury</item>
        <item name="boxStrokeWidth">@dimen/input_layout_stroke_width</item>
        <item name="boxStrokeWidthFocused">@dimen/input_layout_stroke_width</item>
        <item name="errorTextAppearance">@style/TextAppearance.Roboto.Regular.Caption</item>
        <item name="hintTextAppearance">@style/TextAppearance.Roboto.Regular.Caption</item>
        <item name="placeholderTextAppearance">@style/TextAppearance.Roboto.Black.Body2</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.Roboto.Regular.Caption</item>
    </style>

</resources>